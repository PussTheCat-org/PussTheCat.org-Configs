server {
listen 443 ssl http2;
listen [::]:443 ssl http2;

server_name bibliogram.pussthecat.org;


# SSL

ssl_certificate /etc/letsencrypt/live/pussthecat.org/fullchain.pem;
ssl_certificate_key /etc/letsencrypt/live/pussthecat.org/privkey.pem;
ssl_trusted_certificate /etc/letsencrypt/live/pussthecat.org/chain.pem;


# logging

access_log /var/log/nginx/bibliogram.pussthecat.org.access.log default;
error_log /var/log/nginx/bibliogram.pussthecat.org.error.log warn;
        

location / {
proxy_pass http://localhost:10407;

proxy_set_header Host $http_host;
proxy_set_header X-Real-IP $remote_addr;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header X-Scheme $scheme;
proxy_set_header X-Forwarded-Proto https;
proxy_set_header X-Forwarded-Host $http_host;
proxy_max_temp_file_size 0;
proxy_redirect http:// https://;
}


location /privacy {
return 301 https://pussthecat.org/privacy/;
}

location /robots.txt {
root /var/www/PussTheCat.org/public/robots.txt;
}

}



# HTTP redirect

server {
listen 80;
listen [::]:80;

server_name bibliogram.pussthecat.org;

return 301 https://$host$request_uri;
}
